{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "scripthost", "es2020", "es2021", "es2022"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@mocks": ["./__mocks__"],
      "@tools": ["./tools"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "esnext"
  }
}
